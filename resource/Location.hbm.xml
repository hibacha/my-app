<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.nash.model">
    
    <query name="com.nash.model.Location.findByAbbreviation">
        <![CDATA[select l from Location l where l.abbreviation = ? ]]>
    </query>

</hibernate-mapping>